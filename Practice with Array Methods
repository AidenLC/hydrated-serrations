let secretMessage = ['Learning', 'is', 'not', 'about', 'what', 'you', 'get', 'easily', 'the', 'first', 'time,', 'it', 'is', 'about', 'what', 'you', 'can', 'figure', 'out.', '-2015,', 'Chris', 'Pine,', 'Learn', 'JavaScript'];

// reassigns value of index number
secretMessage[7] = 'right';

// checks message length before and after pop method is applied
console.log(secretMessage.length);
secretMessage.pop();
console.log(secretMessage.length);

// adds index items to the end of the array
secretMessage.push('to', 'Program');

// removes first item from array
secretMessage.shift();

// replaces previously shifted item with the value inside unshift method
secretMessage.unshift('Programming');

// starts at index #6, removes next five items, replaces them with 'know,'
secretMessage.splice(6, 5, 'know,');

// logs array as joint single string connected by spaces 
console.log(secretMessage.join(' '));
